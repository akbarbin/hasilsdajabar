<%= form_for(post, url: url, html: {method: method, multipart: true}, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this seller_post from being saved:</h2>

      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, :class => "form-control", :placeholder => "Judul" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, :class => "form-control", :rows => "5" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :harvest_date, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :harvest_date %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :quantity, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :quantity, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :photo_image, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :photo_image %>
      <%= f.hidden_field :photo_image_cache %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :photo_image_detail, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= image_tag(post.photo_image_url(:thumb)) if @post.photo_image? %>
    </div>
  </div>
  <% if @post.photo_image? %>
    <div class="form-group">
      <label class="col-sm-2 control-label">
        Hapus foto
      </label>
      <div class="col-sm-10">
        <%= f.check_box :remove_photo_image %>
      </div>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>