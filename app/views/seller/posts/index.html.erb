<div class="col-xs-12 col-sm-6 col-md-9">
  <%= link_to 'New Post', new_seller_post_path, :class => "btn btn-primary" %>
</div>

<div class="col-xs-12 col-sm-6 col-md-9">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Daftar Post</h3>
    </div>
    <div class="panel-body">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>No</th>
            <th>Foto</th>
            <th>Judul Post</th>
            <th>Deskripsi</th>
            <th>Tanggal Panen</th>
            <th>Quantity</th>
            <th>Harga beli</th>
            <th>Satuan</th>
            <th>Nama Penjual</th>
            <th>Nama Tengkulak</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each_with_index do |post, idx| %>
            <tr>
              <td><%= idx + 1 %></td>
              <td>
                <%= image_tag(post.photo_image_url(:thumb)) if post.photo_image? %>
                <%= image_tag("/assets/160x120.gif", :width => "200") if post.photo_image.blank? %>
              </td>
              <td><%= post.title %></td>
              <td><%= post.description %></td>
              <td><%= post.harvest_date %></td>
              <td><%= post.quantity %></td>
              <td><%= post.purchase_price %></td>
              <td>Kg</td>
              <td><%= post.user.name %></td>
              <td><%= post.wholeseller.name rescue '-' %></td>
              <td>
                <%= link_to 'Lihat', seller_post_path(post), :class => "btn btn-link" %>
                <%= link_to 'Ubah', edit_seller_post_path(post), :class => "btn btn-link" %>
                <%= link_to 'Hapus', seller_post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-link" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>