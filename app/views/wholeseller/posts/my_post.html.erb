<div class="col-xs-12 col-sm-6 col-md-9">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Daftar Post Saya</h3>
    </div>
    <div class="panel-body">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>No</th>
            <th>Judul</th>
            <th>Nama Petani</th>
            <th>Harga Jual Ke Pembeli</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each_with_index do |post, idx| %>
            <tr>
              <td><%= idx + 1 %></td>
              <td><%= post.title %></td>
              <td><%= post.user.name rescue "-" %></td>
              <td><%= post.selling_price rescue "-" %></td>
              <td><%= link_to 'Edit', edit_wholeseller_post_path(post), :class => "btn btn-link" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>