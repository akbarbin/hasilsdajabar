<div class="col-xs-12 col-sm-6 col-md-9">
  <%= link_to 'Back', wholeseller_posts_path, :class => "btn btn-primary" %>
</div>
<div class="col-xs-12 col-sm-6 col-md-9"></div>

<div class="col-xs-12 col-sm-6 col-md-9">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Langkah 1 Membuat jadwal survey</h3>
    </div>
    <div class="panel-body">
      <p>
        <b>Judul:</b>
        <%= @post.title %>
      </p>

      <p>
        <b>Deskripsi:</b>
        <%= @post.description %>
      </p>

      <p>
        <b>Tanggal Panen:</b>
        <%= @post.harvest_date %>
      </p>

      <p>
        <b>Quantity:</b>
        <%= @post.quantity %>
      </p>

      <p>
        <b>Photo:</b>
        <%= image_tag(@post.photo_image_url(:thumb)) if @post.photo_image? %>
      </p>

      <%= form_for(@bergain, :url => save_berganing_wholeseller_posts_path, :method => 'post') do |f| %>
        <% if @bergain.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@bergain.errors.count, "error") %> prohibited this post from being saved:</h2>

            <ul>
              <% @bergain.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="field">
          <%= f.label :survey_date, "Tanggal Survey" %><br />
          <%= f.date_select :survey_date %>
          <%= f.hidden_field :post_id, :value => @post.id %>
        </div>
        <div class="field">
          <%= f.label :bergain_price, "Harga Penawaran per kilogram" %><br />
          <%= f.number_field :bergain_price %>
        </div>
        <div class="actions">
          <%= f.submit "Finish" %>
        </div>
      <% end %>
    </div>
  </div>
</div>