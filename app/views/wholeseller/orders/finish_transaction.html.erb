<div class="col-xs-12 col-sm-6 col-md-9">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Tahap 4 Ringkasan transaksi.</h3>
    </div>
    <div class="panel-body">
      <p>
        <b>Judul:</b>
        <%= @order.post.title %>
      </p>

      <p>
        <b>Harga per kilogram:</b>
        <%= @order.price %>
      </p>

      <p>
        <b>Quantity:</b>
        <%= @order.post.quantity %>
      </p>

      <p>
        <b>Total:</b>
        <%= @order.grand_total %>
      </p>

      <p>
        <b>Order Number:</b>
      </p>
      <h3><%= @order.order_number %></h3>

      <%= link_to "Selesai", wholeseller_posts_path, :class => "btn btn-success" %>
    </div>
  </div>
</div>