<div class="col-xs-12 col-sm-6 col-md-9">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Daftar Post</h3>
    </div>
    <div class="panel-body">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>No</th>
            <th>Foto</th>
            <th>Judul</th>
            <th>Deskripsi</th>
            <th>Quantity</th>
            <th>Harga jual per kg</th>
            <th>Nama Penjual</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each_with_index do |post, idx| %>
            <tr>
              <td><%= idx + 1 %></td>
              <td>
                <%= image_tag(post.photo_image_url(:thumb)) if post.photo_image? %>
                <%= image_tag("/assets/160x120.gif", :width => "200") if post.photo_image.blank? %>
              </td>
              <td><%= post.title %></td>
              <td><%= post.description %></td>
              <td><%= post.quantity %></td>
              <td><%= post.selling_price.to_i %></td>
              <td><%= post.user.name rescue "-" %></td>
              <td><%= link_to 'Show', buyer_post_path(post), :class => "btn btn-link" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>