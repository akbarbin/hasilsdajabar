<div class="col-xs-12 col-sm-6 col-md-9">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Daftar Post</h3>
    </div>
    <div class="panel-body">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>No</th>
            <th>Order number</th>
            <th>Order status</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Grand total</th>
            <th>Post</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each_with_index do |order, idx| %>
            <tr>
              <td><%= idx + 1 %></td>
              <td><%= order.order_number %></td>
              <td><%= order.order_status %></td>
              <td><%= order.quantity %></td>
              <td><%= order.price %></td>
              <td><%= order.grand_total %></td>
              <td><%= order.post.title rescue "-" %></td>
              <td>
                <%= link_to 'Show', buyer_order_path(order), :class => "btn btn-link" %>
                <%= link_to 'Destroy', buyer_order_path(order), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-link" %>
                <% if order.order_status == "Bergain-approved" %>
                  <%= link_to 'Lanjutkan pemesanan', method_payment_buyer_order_path(order), :class => "btn btn-link" %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>