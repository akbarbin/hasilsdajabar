<div class="col-xs-12 col-sm-6 col-md-9">
  <%= link_to 'New User', new_admin_user_path, :class => "btn btn-primary" %>
</div>
<div class="col-xs-12 col-sm-6 col-md-9"></div>
<div class="col-xs-12 col-sm-6 col-md-9">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Daftar User</h3>
    </div>
    <div class="panel-body">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>No</th>
            <th>Name</th>
            <th>Email</th>
            <th>Type user</th>
            <th>Total deposit</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each_with_index do |user, idx| %>
            <tr>
              <td><%= idx + 1 %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.type_user %></td>
              <td><%= user.total_deposit %></td>
              <td>
                <%= link_to 'Show', admin_user_path(user), :class => "btn btn-link" %>
                <%#= link_to 'Edit', edit_admin_user_path(user), :class => "btn btn-link" %>
                <%#= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-link" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>